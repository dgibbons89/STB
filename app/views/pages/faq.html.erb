<head>
	   <div id="facebook_app">
      <h2>Awesome People</h2>
 

  <% if current_user %>
    <div id="friends">
      <p><%= link_to "Invite Your Facebook Friends", "#", :id => "invite_fb_friends" %></p>

      <div id="fb-root"></div>

      <script src="http://connect.facebook.net/en_US/all.js"></script>

      <script>
        $(function(){
    
          $("a#invite_fb_friends").click(function() {
            FB.init({ 
               appId:'675585185824524', 
               cookie:false, 
               status:true
            });
      
            FB.ui({ method: 'apprequests', message: '<%= current_user.email %> thinks you are really Awesome.'});
          });
        });
      </script>
    </div>
  <% end %>
  
 <div id="awesome_friends">

    <table>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %> is Awesome!</td>
      </tr>
      <% end %>
    </table>


  </div>
</div>



