<div id="media" class="transitions-enabled">
  <% @media.each do |media| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(media.image.url(:medium)), media %>
      <div class="panel-body"> Zip Code
        <p><strong><%= media.zip %></strong></p>
        <%= media.votes.count %> People know this person. 
        <%= button_to "I know this person", [:upvote, media], method: :post %>
         
        
        <% if current_user && media.user == current_user %>
          <div class="actions">
                 <%= link_to edit_media_path(media) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to media, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
            
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
