<%= render 'pages/home' unless user_signed_in? %>
<center><p>
  
  <h4>Search by Zip Code</h4>
  <%= form_tag(videos_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Zip Code" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

</p>
</br> 
<p>
<%= link_to new_video_path do %> <span class="glyphicon glyphicon-plus"></span> Add a video <% end %>

</p>
</center>

<div id="videos" class="transitions-enabled">
  <% @videos.each do |video| %>
    <div class="box panel panel-default">
      <%= link_to video_tag(video.video.url(:medium)), video %>
      <div class="panel-body"> Zip Code
        <p><strong><%= video.zip %></strong></p>
        <%= video.votes.count %> People know this person. 
        <%= button_to "I know this person", upvote_video_path(video), method: :post %>
         
        
        <% if current_user && video.user == current_user %>
          <div class="actions">
                 <%= link_to edit_video_path(video) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
            
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>